<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:layout_width="320dp"
            android:layout_height="400dp"
            android:orientation="vertical" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout">
        <TextView
                android:text="resultado"
                android:layout_width="match_parent"
                android:layout_height="60dp" android:id="@+id/tv_result" android:baselineAligned="false"/>
        <Button
                android:text="Suma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_suma"
                style="@style/Widget.AppCompat.Button"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_resta" android:text="Resta"/>
        <Button
                android:text="Multiplicar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_multiplicacion"/>
        <Button
                android:text="Dividir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_dividir"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="320dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_numberOne" android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_numberTwo" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>